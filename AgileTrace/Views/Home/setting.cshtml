@{
    Layout = null;
}

<p>
    <strong class="pull-left">App</strong>
    <button class="btn btn-sm btn-primary pull-right" ng-click="showAddApp()">add</button>
    <div class="clearfix"></div>
</p>
<table class="table table-bordered table-condensed table-responsive table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>SecurityKey</th>
        <th>Action</th>
    </tr>
    <tr ng-repeat="row in rows">
        <td ng-bind="row.id"></td>
        <td ng-bind="row.name"></td>
        <td ng-bind="row.securityKey"></td>
        <td>
            <button class="btn btn-xs btn-success" ng-click="showUpdateApp(row)">update</button>
            <button class="btn btn-xs btn-danger" ng-click="deleteApp(row)">delete</button>
        </td>
    </tr>

</table>

<div class="modal fade" tabindex="-1" role="dialog" id="popEditApp">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    {{selectApp.id?'Update':'Add'}}
                </h4>
            </div>
            <form class="modal-body">
                <div class="form-group">
                    <label >Name</label>
                    <input type="text" class="form-control" ng-model="selectApp.name">
                </div>
                <div class="form-group">
                    <label >SecurityKey</label>
                    <input type="text" class="form-control" ng-model="selectApp.securityKey">
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="doSave()">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>